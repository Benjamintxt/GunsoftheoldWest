<body>
    <div class="text-center">
        <h1>Sales</h1>
    </div>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-sm-12 col-md-4">
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary custom-button" onclick="buyBullets(2)">Buy 2 bullets for €1</button>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary custom-button" onclick="buyBullets(7)">Buy 7 bullets for €4</button>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary custom-button" onclick="buyBullets(12)">Buy 12 bullets for €7</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        function buyBullets(quantity) {
            var remainingBullets = sessionStorage.getItem('remainingBullets') || 0;
            remainingBullets = parseInt(remainingBullets);
            remainingBullets += quantity;
            sessionStorage.setItem('remainingBullets', remainingBullets);
            window.location.href = '/';
        }
    </script>
</body>
